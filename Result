import { NgModule } from '@angular/core';
import { RouterModule, Routes } from '@angular/router';
import { DebitCardDetailsComponent } from './components/debit-card-details/debit-card-details.component';
import { ApplyDebitCardComponent } from './components/apply-debit-card/apply-debit-card.component';
import { AllotDebitCardComponent } from './components/allot-debit-card/allot-debit-card.component';
import { ListDebitCardsComponent } from './components/list-debit-cards/list-debit-cards.component';

const routes: Routes = [
  { path: 'debit-card-details', component: DebitCardDetailsComponent },
  { path: 'apply-debit-card', component: ApplyDebitCardComponent },
  { path: 'allot-debit-card', component: AllotDebitCardComponent },
  { path: 'list-debit-cards', component: ListDebitCardsComponent },
  { path: '', redirectTo: '/debit-card-details', pathMatch: 'full' },
  { path: '**', redirectTo: '/debit-card-details' }
];

@NgModule({
  imports: [RouterModule.forRoot(routes)],
  exports: [RouterModule]
})
export class AppRoutingModule { }
