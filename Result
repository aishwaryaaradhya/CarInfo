export interface DebitCardApplication {
  dcapplicationId: number;
  dateOfApplication?: Date;
  accountNo: number;
  customerId: number;
  status?: string;
  debitCardDetails?: DebitCardDetail[];
}

export interface DebitCardDetail {
  debitCardNo: number;
  dcapplicationId: number;
  accountNo: number;
  cvv: number;
  expiryDate?: Date;
}
